{
  "name": "smart-home",
  "version": "1.0.0",
  "description": "Smart Home Manager Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run build:clean && npm run db:generate && tsc",
    "build:clean": "rimraf dist tsconfig.tsbuildinfo",
    "start": "node deploy-start.js",
    "start:direct": "node dist/server.js",
    "postbuild": "echo Build completed successfully",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist node_modules",
    "render:build": "npm ci --production=false && npm run db:generate && npm run build:typescript",
    "build:typescript": "mkdir -p dist && (npx tsc --project tsconfig.render.json || npx tsc --project . || npx tsc src/server.ts --outDir dist --target ES2020 --module commonjs --esModuleInterop --skipLibCheck)",
    "render:start": "npm start"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@as-integrations/fastify": "^2.1.1",
    "@aws-sdk/client-s3": "^3.969.0",
    "@aws-sdk/s3-request-presigner": "^3.969.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^7.6.0",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^6.19.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.1.9",
    "date-fns": "^3.0.6",
    "dotenv": "^17.2.3",
    "fastify": "^4.25.2",
    "form-data": "^4.0.5",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^12.4.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.8",
    "openai": "^4.104.0",
    "sharp": "^0.33.1",
    "tesseract.js": "^5.0.4",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "prettier": "^3.3.0",
    "prisma": "^6.19.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0"
  },
  "keywords": [
    "home",
    "inventory",
    "management",
    "api",
    "graphql",
    "fastify"
  ],
  "author": "Smart Home Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0 <=21.0.0",
    "npm": ">=9.0.0"
  }
}
